<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MainActivity">

    <!-- No Journal Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Page Header -->
        <TextView
            android:id="@+id/header_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="370dp"
            android:text="@string/header"
            android:textColor="#000000"
            android:textSize="14sp" />

        <!-- Counter Result -->
        <TextView
            android:id="@+id/counter_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_message"
            android:layout_centerInParent="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/result_placeholder"
            android:textColor="#000000"
            android:textSize="30sp" />

        <!-- Counter Button -->
        <Button
            android:id="@+id/counter_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/counter_result"
            android:layout_centerInParent="true"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="130dp"
            android:text="@string/sum_button"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
