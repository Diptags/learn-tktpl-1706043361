<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:gravity="center"
    tools:context=".ui.main.MainActivity">

    <TextView
        android:id="@+id/formTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/form_title"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/formName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/formTitle"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/icon_face"
        android:gravity="center"
        android:hint="@string/form_name"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/formNPM"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/formName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/icon_number"
        android:gravity="center"
        android:hint="@string/form_npm"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/formUsername"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/formNPM"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/icon_person"
        android:gravity="center"
        android:hint="@string/form_username"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/formEmail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/formUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/icon_email"
        android:gravity="center"
        android:hint="@string/form_email"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:textSize="14sp" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="248dp"
        android:layout_height="35dp"
        android:layout_below="@id/formEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="@string/submit_button"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/formStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerButton"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:text="@string/submit_status"
        android:textColor="#000000"
        android:textSize="14sp" />

</RelativeLayout>